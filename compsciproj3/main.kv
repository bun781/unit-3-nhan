ScreenManager:
    LoginScreen:
        name: "LoginScreen"
    RegistrationScreen:
        name: "RegistrationScreen"
    CustomerDashboard:
        name: "CustomerDashboard"
    EmployeeDashboard:
        name: "EmployeeDashboard"
    CustomerOrder:
        name: "CustomerOrder"
    CustomerMap:
        name: "CustomerMap"
    CustomerOrderConfirmation:
        name: "CustomerOrderConfirmation"
    EmployeeOrderArchive:
        name: "EmployeeOrderArchive"
    EmployeeFoodListings:
        name: "EmployeeFoodListings"
    EmployeeRestaurantList:
        name: "EmployeeRestaurantList"

<LoginScreen>:
    name: "LoginScreen"
    MDBoxLayout:
        orientation: "vertical"
        size_hint: 0.65, 1
        pos_hint: {'center_x': .5, 'center_y': .9}
        MDTextField:
            id: username
            hint_text: "Username"
            mode: "rectangle"
        MDTextField:
            id: password
            hint_text: "Password"
            mode: "rectangle"
        MDRectangleFlatButton:
            spacing: "5dp"
            text: "Log in"
            size_hint_x: 1
            on_release:
                root.try_login()
        MDTextButton:
            text: "Don't have an account?[u][color=#1565C0]Sign up[/color][/u]"
            markup: True
            on_release: root.manager.current = "RegistrationScreen"
            halign: "center"
            font_size: "20px"
            theme_text_color: "Hint"
            pos_hint: {"center_x": 0.5}


<RegistrationScreen>
    name: "RegistrationScreen"
    MDBoxLayout:
        orientation: "vertical"
        size_hint: 0.65, 1
        pos_hint: {'center_x': .5, 'center_y': .8}
        MDTextField:
            id: username
            hint_text: "Username"
            mode: "rectangle"
        MDTextField:
            id: name
            hint_text: "Full Name"
            mode: "rectangle"
        MDTextField:
            id: email
            hint_text: "Email"
            mode: "rectangle"
        MDTextField:
            id: password
            hint_text: "Password"
            mode: "rectangle"
        MDTextField:
            id: repassword
            hint_text: "Re-enter password"
            mode: "rectangle"
        MDRectangleFlatButton:
            spacing: "5dp"
            text: "Log in"
            size_hint_x: 1
            on_release:
                root.try_register()