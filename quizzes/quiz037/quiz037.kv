MDScreen:
    md_bg_color: '#ffffff'
    MDBoxLayout:
        size_hint: 0.7, 0.8
        pos_hint: {"center_x": 0.5, "center_y": .5}
        orientation: 'vertical'
        md_bg_color: '#ffffff'

        MDLabel:
            id: title
            text: "Tic Tac Toe by Nhan"
            halign: "center"
            size_hint: 1, 0.1
            font_size: "40pt"
            color: '#000000'
        MDLabel:
